global finalUsers
type TotalUsers = list[list[list[str]]]
type Users = list[list[str]]
finalUsers:TotalUsers = []

import os
for filename in os.listdir('suggestions/'):
    file = open(f'suggestions/{filename}', 'r')
    fileSplit = file.readlines()
    finalArray:Users = []
    for user in fileSplit:
        user = user.split('|')
        user.append(filename.replace('suggestions_', '').replace('.txt', ''))
        finalArray.append(user)
    finalUsers.append(finalArray)

print(finalUsers)

finalHTML = '''<!DOCTYPE html>
<html>
    <head>
        <title>
            List of suggested to ban users!
        </title>
        <link rel="stylesheet" href="https://vschar-official.com/css/global-style.css">
    </head>

    <body>\n'''
i = -1
for users in finalUsers:
    i += 1
    finalHTML += '        <div class="UserID_' + users[0][4] + '">'

    for user in users:
        finalHTML += ''' \n            userID: "''' + str(user[1]) + '''"<br>\n            name(at the time of suggestion): "''' + str(user[2]) + '''"<br>\n            reason: "''' + str(user[3]).strip() + '''"<br>\n'''
    
    finalHTML += '        </div>\n'

finalHTML += '''    </body>
</html>'''

file = open('subindex.html', 'w'); file.write(finalHTML); file.close()

print('Closing in 5 seconds')
import time
time.sleep(5)
exit(1)